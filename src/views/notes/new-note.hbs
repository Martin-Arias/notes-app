<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Nota</h3>
        </div>

        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                   <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" cols="30" rows="10" placeholder="Escribe una descripcion..." class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>