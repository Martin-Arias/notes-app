<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header text-center">
               <h3>Registrarse</h3>
            </div>
            <div class="card-body">
                <p class="text-center">Ingresa tus datos para registrarte</p>
               
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre" value="{{name}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingresa tu email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contraseña">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contraseña">
                    </div>
                     {{#each errors}}
                     <p class="text-center" style="color: red;">{{text}}</p>
                     {{/each}}
                     {{#if error_msg}}
                     <p class="text-center" style="color: red;">
                         {{error_msg}}
                     </p>
                     {{/if}}
                     <button class="btn btn-primary btn-block">Registrarme</button>
                    <hr>
                        <button class="btn btn-outline-primary btn-google btn-block" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
                        <button class="btn btn-outline-primary btn-facebook btn-block" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button>
                </form>
               
                
            </div>
        </div>
    </div>
</div>