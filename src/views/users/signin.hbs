<div class="row">
    <div class="col-md-4 ">
        <div class="card">
            <div class="card-header text-center">
                <h3>Bienvenido</h3>
            </div>
            <div class="card-body">
                <p class="text-center">Ingresa tus datos para continuar</p>
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Ingresa tu email" value="{{email}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="ContraseÃ±a">
                    </div>
                      {{#if error}}
                     <p class="text-center" style="color: red;">
                         {{error}}
                     </p>
                     {{/if}}
                    <button class="btn btn-primary btn-block">Ingresar</button>
                    <hr>
                    <button class="btn btn-outline-primary btn-google btn-block" type="submit"><i
                            class="fab fa-google mr-2"></i> Sign up with Google</button>
                    <button class="btn btn-outline-primary btn-facebook btn-block" type="submit"><i
                            class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button>
                </form>
            </div>
        </div>
    </div>
</div>